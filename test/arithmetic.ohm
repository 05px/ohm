Expr {
  expr
    = addExpr

  addExpr
    = addExpr "+" mulExpr  -- plus
    | addExpr "-" mulExpr  -- minus
    | mulExpr

  mulExpr
    = mulExpr "*" priExpr  -- times
    | mulExpr "/" priExpr  -- divide
    | priExpr

  priExpr
    = "(" expr ")"         -- paren
    | number

  number  (a number)
    = number digit         -- rec
    | digit
}

