#!/usr/bin/env node

/* global Buffer, process */
'use strict';

var Server = require('node-static').Server;
var http = require('http');
var path = require('path');
var fs = require('fs');

var port = 8080;
var grammarRoute = '/grammars/';
var semanticsRoute = '/semantics/';
var fileServer = new Server('.');

var server = http.createServer(handleRequest);

var mapping = {};

function handleRequest(req, res) {
  if (req.url === grammarRoute) {
    // list all the grammars as JSON array
    var grammarNames = Object.getOwnPropertyNames(mapping);
    res.end(JSON.stringify(grammarNames, null, 2));
    return;
  } else if (req.url.indexOf(grammarRoute) === 0) {
    var filename = req.url.slice(grammarRoute.length);
    if (mapping.hasOwnProperty(filename)) {
      handleGrammarRequest(filename, req, res);
      return;
    }
  } else if (req.url.indexOf(semanticsRoute) === 0) {
    var filename = req.url.slice(semanticsRoute.length);
    if (mapping.hasOwnProperty(filename)) {
      handleSemanticsRequest(filename, req, res);
      return;
    }
  }

  // fallback to filesystem
  req.addListener('end', function() {
    fileServer.serve(req, res, function(err, result) {
      if (err) {
        console.error('Error serving %s - %s', req.url, err.message); // eslint-disable-line no-console
        res.statusCode = err.status;
        res.end(String(err.status));
        return;
      }
      console.log('%s', req.url); // eslint-disable-line no-console
    });
  }).resume();
}

function handleGrammarRequest(filename, req, res) {
  if (req.method !== 'POST') {
    // read the grammar
    fileServer
      .serveFile('/' + mapping[filename].grammar, 200, {'Content-type': 'text/ohm-js'}, req, res)
      .on('error', function (err) {
        console.error('Error serving %s - %s', req.url, err.message); // eslint-disable-line no-console
        res.statusCode = 404;
        res.end();
      });
  } else {
    // write the grammar
    (function() {
      var body = [];
      req.on('data', function(chunk) {
        body.push(chunk);
      }).on('end', function() {
        body = Buffer.concat(body);
        fs.writeFile(mapping[filename].grammar, body);
        res.statusCode = 200;
        res.end();
      });
    })();
  }
}

function handleSemanticsRequest(filename, req, res) {
  if (req.method !== 'POST') {
    // read the semantics
    fileServer
      .serveFile('/' + mapping[filename].semantics, 200, {'Content-type': 'text/javascript'}, req, res)
      .on('error', function (err) {
        console.error('Error serving %s - %s', req.url, err.message); // eslint-disable-line no-console
        res.statusCode = 404;
        res.end();
      });
  } else {
    // write the semantics
    (function() {
      var body = [];
      req.on('data', function(chunk) {
        body.push(chunk);
      }).on('end', function() {
        body = Buffer.concat(body);
        var opsAndAtts = JSON.parse(body.toString());

        function toCode(ops) {
          var code = Object.getOwnPropertyNames(ops).map(function(opName) {
            var op = ops[opName];
            var opCode = Object.getOwnPropertyNames(op).map(function(action) {
              var src = op[action];
              src = src.split('\n').map(function(line, idx, lines) {
                if (idx > 0 && line.trim() !== '') {
                  if (idx < lines.length - 1) {
                    line = '        ' + line;
                  } else {
                    line = '      ' + line;
                  }
                }
                return line;
              }).join('\n');
              return '      ' + action + ': ' + src;
            }).join(',\n');
            return '    \'' + opName + '\': {\n' +
                   opCode + '\n' +
                   '    }';
          }).join(',\n');
          return '{\n' + code + '\n  }';
        }

        var code =
          '// AUTOMATICALLY GENERATED BY OHM EDITOR\n' +
          '// DO NOT EDIT BY HAND!\n' +
          '//\n' +
          '// jscs:disable disallowQuotedKeysInObjects\n' +
          '\'use strict\';\n\n' +
          'module.exports = {\n' +
          '  operations: ' + toCode(opsAndAtts.operations) + ',\n' +
          '  attributes: ' + toCode(opsAndAtts.attributes) + '\n' +
          '};\n';

        fs.writeFile(mapping[filename].semantics, code);
        res.statusCode = 200;
        res.end();
      });
    })();
  }
}

function tryNextPort(err) {
  if (err.code === 'EADDRINUSE' || err.code === 'EACCES') {
    server.listen(++port);
  }
}

function serve(args) {
  var nextIsGrammar = false;
  var nextIsSemantics = false;
  var semanticsIdx = 0;

  // Super basic command line option parsing.
  for (var i = 0; i < args.length; ++i) {
    if (args[i] === '-g') {
      nextIsGrammar = true;
      nextIsSemantics = false;
    } else if (args[i] === '-s') {
      nextIsGrammar = false;
      nextIsSemantics = true;
    } else if (args[i] === '-b') {
      // TODO: bundle = grammar + semantics
      console.log('Bundles not yet supported! (-b)'); // eslint-disable-line no-console
    } else if (args[i][0] === '-') {
      nextIsGrammar = false;
      nextIsSemantics = false;
      console.log('Unknown option:', args[i]); // eslint-disable-line no-console
    } else if (nextIsGrammar) {
      var grammarName = path.basename(args[i]);
      mapping[grammarName] = {
        grammar: args[i],
        semantics: args[i].substring(0, args[i].length - path.extname(args[i]).length) + '.js'
      }
    } else if (nextIsSemantics) {
      mapping[grammarNames[semanticsIdx++]].semantics = args[i];
    } else {
      console.log('Unknown arg:', args[i]); // eslint-disable-line no-console
    }
  }

  server.on('error', tryNextPort);
  server.on('listening', function() {
    server.removeListener('error', tryNextPort);
    console.log('Ohm Visualizer is running at http://localhost:' + port + '/visualizer/'); // eslint-disable-line no-console
  });
  server.listen(port);

  return mapping;
}

if (require.main === module) {
  serve(process.argv.slice(2));
}
